<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.views.Main.MenuActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/sectionTab"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:tabTextColor="#BCBCBC"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabSelectedTextColor="@color/lightRed"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fragmentReplace"
        android:layout_marginBottom="25dp"
        android:background="#BCBCBC" />

    <LinearLayout
        android:id="@+id/fragmentReplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sectionTab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/sectionFragmentReplace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" />

    </LinearLayout>

</RelativeLayout>
